@{
  Layout = "_Layout";
}

@using BugLister.Models;
@model List<BugLister.Models.Issue>;

<h1>Issues</h1>

@if (@Model.Count == 0)
{
  <p>No issues have been added yet!</p>
} 
<div class="box">
  @foreach (Issue issue in Model)
  {
    <li>@Html.ActionLink($"{issue.Title}", "Details", new { id = issue.IssueId }) | @issue.Language.Name</li>
  }
</div>


<p>@Html.ActionLink("Add new Issue", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>