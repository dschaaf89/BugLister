@{
  Layout = "_Layout";
}

@using BugLister.Models;
@model List<BugLister.Models.Issue>;

<h1>Search Results</h1>

@if (@Model.Count == 0) 
{
  <p>No issues matched!</p>
}
else
{
  <div class="box">
    <div class="inner-box">
      @foreach (Issue issue in Model)
      {
        <li>@Html.ActionLink($"{issue.Title}", "Details", new {id = issue.IssueId })</li>
      }
    </div>
  </div>
}


<p>@Html.ActionLink("Add Issue", "Create")</p>
<p>@Html.ActionLink("Homepage", "Index", "Home")</p>
<form action="/Issues/Search" method="post">
  <label>Enter a Search</label>
  <input class="input" type="text" id="search" name="search">
  <input type="submit" value="Search" class="btn btn-info buttons" />
</form>