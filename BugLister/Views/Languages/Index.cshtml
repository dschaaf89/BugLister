@{
  Layout = "_Layout";
}

@using BugLister.Models;
@model List<BugLister.Models.Language>;

<h1>Languages</h1>

@if (@Model.Count == 0)
{
  <h3>No languages have been added yet!</h3>
} 

@foreach (Language language in Model)
{
  <li>@Html.ActionLink($"{language.Name}", "Details", new { id = language.LanguageId })</li>
}

<p>@Html.ActionLink("Add new language", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>